		utils/strr_realloc \
		lexer/lexer_bonus \
		lexer/lexer_utils \
		utils/expand_words \
		utils/expand_utils \
	
SHITTY_TOKENIZER_SRC = 	builtin/builtin \
						env/env \
						executor/executor \
						lexer/lexer \
						parsing/parsing \
						prompter/prompt \
						signals/signals \
						main_shitty_tokenizer \
						minishell \

SHITTY_TOKENIZER_SRC +=	builtin/cd \
						builtin/echo \
						builtin/envb \
						builtin/exit \
						builtin/export \
						builtin/pwd \
						builtin/unset \
